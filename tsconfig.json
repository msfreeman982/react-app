{
  "include": ["./src/*.tsx", "src/__tests___/App.test.tsx"],
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
//      "esnext",
      "ES2017"
    ],
    "types": ["node", "jest", "@testing-library/jest-dom/extend-expect"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "module": "commonjs",
//    "module": "esnext",
    "jsx": "react",
    //    "jsx": "react-jsx"
    "typeRoots": ["node_modules/@types"],
    "resolveJsonModule": true,
    "outDir": "dist",
    "sourceMap": true,
//    "moduleResolution": "node",
//    "resolveJsonModule": true,
//    "isolatedModules": true,
//    "noEmit": true,
  },
  "exclude": [
    "./cypress.config.ts"
//    "src",
//    "./src/__tests/**/*",
//    "./public",
//    "./.vscode",
//    "./node_modules"
  ]
}

